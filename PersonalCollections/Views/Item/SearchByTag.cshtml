@using Application.Models.Item;
@model TagDto

@{
    ViewData["Title"] = "Search by tag";
}

<input type="hidden" value="@Model.Id" id="tag-id"/>

<h4 class="mt-5">Search results for tag: "@(Model.Name)"</h4>

<div id="items-container">

</div>

<div class="d-flex flex-row justify-content-center w-100 mt-5">
    <div class="spinner-border text-success" role="status" id="loader">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        $('#loader').hide();

        searchByTag();
        addSearchByTagInfiniteScroll();
    }, false);
</script>