@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityError>
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> sharedLocalizer;
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-4">
    <h1 class="text-danger">@sharedLocalizer["Error"].</h1>
    <h2 class="text-danger">@sharedLocalizer["ErrorRequest"]</h2>

    <div class="mt-5">
        @foreach(var error in Model) {
            <p class="text-danger">
                @error.Description
            </p>
        }
    </div>
</div>







